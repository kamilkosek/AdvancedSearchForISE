<Window x:Class="AdvancedSearch.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="180" Width="320" WindowStyle="ToolWindow" ResizeMode="NoResize"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Text="AdvancedSearch AddOn for PowerShell ISE" Margin="2" FontWeight="Bold"></TextBlock>
            <TextBlock Text="Visit on GitHub" Margin="2" Foreground="Blue" MouseUp="TextBlock_MouseUp"></TextBlock>   
            <TextBlock Text="Visit Project Website" Margin="2" Foreground="Blue" MouseUp="TextBlock_MouseUp_1"></TextBlock>
            <TextBlock Text="Contact via Twitter" Margin="2" Foreground="Blue" MouseUp="TextBlock_MouseUp_2"></TextBlock>
        </StackPanel>
        <Button Content="Close" Height="25" Width="80" Grid.Row="2" HorizontalAlignment="Right" Margin="5" Click="Button_Click"></Button>
    </Grid>
</Window>
